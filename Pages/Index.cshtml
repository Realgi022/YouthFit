@page
@model YouthFit.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome to YouthFit";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet" />

<div class="container py-5">
    <h1 class="text-center mb-4">Welcome to YouthFit</h1>
    <div class="row justify-content-center">

        <!-- Sign Up Panel -->
        <div class="col-md-5">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-3">Create an Account</h4>
                    <form method="post" asp-page-handler="Signup">
                        <div class="mb-3">
                            <label asp-for="SignupUsername" class="form-label">Username</label>
                            <input asp-for="SignupUsername" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="SignupEmail" class="form-label">Email</label>
                            <input asp-for="SignupEmail" type="email" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="SignupPassword" class="form-label">Password</label>
                            <input asp-for="SignupPassword" type="password" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
                    </form>
                    @if (!string.IsNullOrEmpty(Model.SignupMessage))
                    {
                        <div class="alert alert-info mt-3">@Model.SignupMessage</div>
                    }
                </div>
            </div>
        </div>

        <!-- Log In Panel -->
        <div class="col-md-5">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-3">Log In</h4>
                    <form method="post" asp-page-handler="Login">
                        <div class="mb-3">
                            <label asp-for="LoginUsername" class="form-label">Username</label>
                            <input asp-for="LoginUsername" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="LoginPassword" class="form-label">Password</label>
                            <input asp-for="LoginPassword" type="password" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-secondary w-100">Log In</button>
                    </form>
                    @if (!string.IsNullOrEmpty(Model.LoginErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">@Model.LoginErrorMessage</div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    body {
        background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('/images/Youthfit.png') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
    }

    .container {
        position: relative;
        z-index: 1;
    }

    h1 {
        font-size: 3rem;
        font-weight: 700;
        color: #ffffff;
        text-shadow: 3px 3px 8px rgba(0, 0, 0, 0.3); 
        letter-spacing: 2px;
        text-align: center;
        margin-bottom: 30px;
        animation: fadeIn 1.5s ease-in-out;
    }

    {
        opacity: 0;
        transform: translateY(-30px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .card {
        border: none;
        border-radius: 1rem;
        background: rgba(255, 255, 255, 0.9);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        backdrop-filter: blur(6px);
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02);
        }

    .card-title {
        font-weight: 600;
        color: #333;
    }

    .btn-primary {
        background-color: #00c9ff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #00b0e6;
        }

    .btn-secondary {
        background-color: #92fe9d;
        border: none;
        color: #000;
    }

        .btn-secondary:hover {
            background-color: #7cd688;
        }
</style>



