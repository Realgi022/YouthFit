<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - YouthFit</title>

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
		  rel="stylesheet" />

	<link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
	<link rel="stylesheet" href="~/YouthFit.styles.css" asp-append-version="true" />
	<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&display=swap"
		  rel="stylesheet" />
</head>

<body>
	@{
		var currentPage = ViewData["CurrentPage"] as string ?? string.Empty;
	}

	@if (currentPage != "/Index" && currentPage != "/Login")
	{
		<nav class="navbar navbar-expand-lg fixed-top navbar-glass">
			<div class="container d-flex align-items-center">
				<!-- Logo -->
				<a class="navbar-brand me-4" asp-page="/Steps">
					<img src="~/images/Logo.png" alt="YouthFit Logo" height="40">
				</a>

				<!-- Toggler for mobile -->
				<button class="navbar-toggler"
						type="button"
						data-bs-toggle="collapse"
						data-bs-target="#mainNav"
						aria-controls="mainNav"
						aria-expanded="false"
						aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<!-- Nav Links -->
				<div class="collapse navbar-collapse justify-content-center" id="mainNav">
					<ul class="navbar-nav gap-lg-5">
						<li class="nav-item">
							<a class="nav-link" asp-page="/Steps">Steps</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-page="/Challenges">Challenges</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-page="/Achievements">Achievements</a>
						</li>
						<!-- Logout button -->
						<li class="nav-item">
							<a class="nav-link" asp-page="/Logout">Logout</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	}

	<div class="container" style="margin-top: 80px;">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
